<% @body_id = 'product-details' %>

<% cache cache_key_for_product do %>
  <div data-hook="product_show" class="row" itemscope itemtype="https://schema.org/Product">
    <div class="col-md-6" data-hook="product_left_part">
      <div data-hook="product_left_part_wrap">
        <div id="product-images" data-hook="product_images">
          <div id="main-image" class="panel panel-default" data-hook>
            <div class="panel-body text-center">
              <%= render :partial => 'image' %>
            </div>
          </div>
          <div id="thumbnails" data-hook>
            <%= render :partial => 'thumbnails' %>
          </div>
        </div>

        <div data-hook="product_properties">
          <%= render :partial => 'properties' %>
        </div>

        <div data-hook="promotions">
          <%= render :partial => 'promotions' %>
        </div>

      </div>
    </div>

    <div class="col-md-6" data-hook="product_right_part">
      <div data-hook="product_right_part_wrap">
        <div id="product-description" data-hook="product_description">
          <h1 class="product-title" itemprop="name"><%= @product.name %></h1>
           <div class="well" 
 itemprop="description" data-hook="description">
            <%= product_description(@product) %>
          </div>

		
<input type="text" id="pincode" pattern="[1-9][0-9]{5}" />   
<input type= "button" onClick="include(110048)" />

<div id = "unsupported" style="display:none">
<p>
Cakes served !
</p> </div>      
<div id = "unsupported" style="display:none">
<p>
Sorry we do not deliver in these areas currently.
We will love to serve you some cakes soon though

</p> </div>
<style>
input:invalid {
  color: white;
}


</style>
<script>

var pin = ["110001", "110003", "110004", "110005", "110007", "110008", "110010", "110011", "110012", "110014", "110015", "110016", "110017", "110018", "110019", "110021", "110022", "110023", "110024", "110025", "110026", "110027", "110028", "110029", "110048", "110049", "110055", "110057", "110058", "110059", "110063", "110064", "110065", "110067", "110069", "110070"];

function include(pin){
   var obj = parseInt(document.getElementById("pincode"));
   
   for(var i=0;i<pin.length;i++){
     if (pin[i] == obj){
   document.getElementById("unsupported").style.display="inline";}
    else{
    document.getElementById("supported").style.display="inline";   

}

}
}
}
</script>


          <div id="cart-form" data-hook="cart_form">
            <%= render :partial => 'cart_form' %>
          </div>
	
        </div>

     
      </div>
    </div>

        </div>
<div id="taxon-crumbs" class="nav navbar-nav" style="color:rgba(217,57,52);position:relative;top:25px;" data-hook="product_taxons">
          <%= render :partial => 'taxons' %>
  </div>
<% end %>

