<% content_for :head do %>
<% if products.respond_to?(:total_pages) %>
<%= rel_next_prev_link_tags products %>
<% end %>
<% end %>
<div data-hook="products_search_results_heading">
  <% if products.empty? %>
  <div data-hook="products_search_results_heading_no_results_found">
    <%= Spree.t(:no_products_found) %>
  </div>
  <% elsif params.key?(:keywords) %>
  <div data-hook="products_search_results_heading_results_found">
    <h6 class="search-results-title"><%= Spree.t(:search_results, keywords: h(params[:keywords])) %></h6>
  </div>
  <% end %>
</div>
<% if products.any? %>
<div id="products" class="row eq-height" data-hook>
  <% products.each do |product| %>
  <% url = spree.product_url(product, taxon_id: @taxon.try(:id)) %>
  <div id="product_<%= product.id %>" class="col-sm-3 item-grid simpleCart_shelfItem row-eq-height">
    <% cache(@taxon.present? ? [I18n.locale, current_currency, @taxon, product] : cache_key_for_product(product)) do %>
    <div class=" mid-pop">
      <div class="sq-box">
        <div class="sq-img">
          <%= link_to url do %>
          <%= small_image(product, itemprop: "image", class: 'product-sq-img') %>
          <% end %>
        </div>
      </div>
      <div class="mid-1">
        <div class="product-container">
          <div class="product-top">
            <span><%= link_to product.taxons.all.find{|x| x.taxonomy.name == "Categories" }.name, seo_url(product.taxons.all.find{|x| x.taxonomy.name == "Categories" }) %></span>
            <span><%= link_to product.taxons.all.find{|x| x.taxonomy.name == "Bakers" }.name, seo_url(product.taxons.all.find{|x| x.taxonomy.name == "Bakers" }) %></span>
            <%= link_to url do%>
            <%= content_tag(:h6, truncate(product.name, length: 50), class: 'info', itemprop: "name", title: product.name) %>
            <% end %>
          </div>
          <div class="clearfix"></div>
        </div>
        <div class="mid-2">
          <div class="item-price"><%= display_price(product) %></div>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
  <% reset_cycle("classes") %>
</div>
<% end %>
<% if products.respond_to?(:total_pages) %>
<%= paginate products, theme: 'twitter-bootstrap-3' %>
<% end %>
